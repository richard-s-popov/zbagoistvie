<!-- FlexSlider -->
<script src="@Url.Content("~/Scripts/jquery.flexslider-min.js")"></script>
<!-- / FlexSlider -->

<!-- Product features carousel -->
<script src="@Url.Content("~/Scripts/jquery.carouFredSel-5.6.2.js")"></script> 
<script src="@Url.Content("~/Scripts/jquery.touchwipe.min.js")"></script>
<!-- / Product features carousel -->

<script>
$(document).ready(function() {
	
	//	Product features carousel
	$('#carousel').carouFredSel({
		responsive: true,
		prev: '#prev2',
		next: '#next2',
		items: 2,
		scroll: {
	        wipe: true,
	        pauseOnHover: true,
			mousewheel: true
	    },
		items: {
			width: 290,
			height: "variable",
			visible: {
				min: 1,
				max: 3
			}
		}
	});
	// / Product features carousel
	
	// Testimonials slider 
	$('.flexslider').flexslider({
		mousewheel: true
	});
	// / Testimonials slider

});
</script>

